# FinOptiAgents Platform - Environment Variables Template
# Copy this to .env and fill in your actual values

# ============================================
# Configuration Mode
# ============================================
# Set to 'true' to load from Secret Manager even when .env exists
# Set to 'false' to use .env values (local development)
USE_SECRET_MANAGER=false

# ============================================
# Google Cloud & Gemini Configuration
# ============================================
GOOGLE_API_KEY=your-gemini-api-key-here
FINOPTIAGENTS_LLM=gemini-3-pro-preview
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_ZONE=us-central1-a

# ============================================
# Storage & Buckets
# ============================================
STAGING_BUCKET_URI=gs://your-staging-bucket
PROD_BUCKET_URI=gs://your-prod-bucket
PACKAGE_URI=gs://your-bucket/path/to/package.whl

# === GCP Configuration ===
GOOGLE_CLOUD_PROJECT=your-project-id

# === Google OAuth Configuration ===
# To enable OAuth, create OAuth 2.0 credentials in GCP Console
# Leave empty to use simulated auth (development mode)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8501

# === ADK Configuration ===

# ============================================
# Database Configuration
# ============================================
GOOGLE_DB_URI=your-project:region:instance-name

# ============================================
# BigQuery Configuration
# ============================================
BIGQUERY_DATASET_ID=finoptiagents
BIGQUERY_TABLE_ID=vm_deletion_log
BIGQUERYAGENTANALYTICSPLUGIN_TABLE_ID=agent_analytics_log

# ============================================
# RAG Configuration
# ============================================
RAG_Engine_LOCATION=us-east4
RAG_EARB_DESIGNDOCS=gs://your-rag-docs-bucket
RAG_GOOGLE_GENAI_USE_VERTEXAI=True

# ============================================
# MCP Configuration
# ============================================
MCP_TOOLBOX_URL=http://127.0.0.1:5001
TOOLSET_NAME_FOR_LOGGING=my_googleaiagent_toolset
LOGGING_TOOL_NAME=insert-user-action-and-result

# ============================================
# Service URLs (Docker internal network)
# ============================================
OPA_URL=http://opa:8181
APISIX_URL=http://apisix:9080

# ============================================
# MCP Server Configuration
# ============================================
GCLOUD_MCP_DOCKER_IMAGE=gcloud-mcp-image
GCLOUD_MOUNT_PATH=~/.config/gcloud:/root/.config/gcloud
MONITORING_MCP_URL=http://monitoring_mcp:6002

# ============================================
# Observability
# ============================================
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true

# ============================================
# Development/Testing
# ============================================
# Set to 'true' for local development
DEV_MODE=false

# ============================================
# OpenAI (Optional)
# ============================================
OPENAI_API_KEY=your-openai-key-if-needed
